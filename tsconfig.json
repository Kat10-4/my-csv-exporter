{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": false,
    "baseUrl": "./src/index",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "compileOnSave": true
}
